<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323">


    <ImageView
        android:id="@+id/signup_IMG_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/check"
        android:contentDescription="Logo" />


    <TextView
        android:id="@+id/signup_TXT_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FitCheck"
        android:textSize="48sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@id/signup_IMG_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/signup_TXT_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up for your account"
        android:textSize="24sp"
        android:textColor="#888888"
        android:layout_below="@id/signup_TXT_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />


    <EditText
        android:id="@+id/SingUp_ET_emailInput"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_below="@id/signup_TXT_subtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Email"
        android:background="@drawable/login_input"
        android:paddingLeft="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#AAAAAA"
        android:textSize="18sp"
        android:inputType="textEmailAddress"
        android:elevation="2dp" />


    <EditText
        android:id="@+id/SingUp_ET_password"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_below="@id/SingUp_ET_emailInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:hint="Password"
        android:background="@drawable/login_input"
        android:paddingLeft="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#AAAAAA"
        android:textSize="18sp"
        android:inputType="textPassword"
        android:elevation="2dp" />


    <Button
        android:id="@+id/SignUp_BTN_signupButton"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_below="@id/SingUp_ET_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Sign Up"
        android:textSize="22sp"
        android:textStyle="bold"
        android:backgroundTint="#D5FF39"
        android:textColor="#232323"
        android:fontFamily="sans-serif-medium"
        android:elevation="2dp"/>
</RelativeLayout>
