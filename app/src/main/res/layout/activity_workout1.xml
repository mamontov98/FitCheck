<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919">


    <TextView
        android:id="@+id/title_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Workout 1"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/column_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_workout"
        android:layout_marginTop="18dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Exercise"
            android:textColor="#BBBBBB"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Sets"
            android:textColor="#BBBBBB"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="Reps"
            android:textColor="#BBBBBB"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="Wt"
            android:textColor="#BBBBBB"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="Prev Reps"
            android:textColor="#BBBBBB"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="Prev Wt"
            android:textColor="#BBBBBB"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/Workout1_BTN_AddExerciseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Exercise"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#4477FF"
        android:textColor="#FFFFFF"
        android:layout_below="@id/column_titles"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Workout1_RV_Exercises"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/Workout1_BTN_AddExerciseButton"
        android:layout_above="@id/buttons_row"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />


    <LinearLayout
        android:id="@+id/buttons_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_above="@id/bottom_bar"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <Button
            android:id="@+id/Workout1_BTN_Save"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Save"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#191919"
            android:backgroundTint="#7ED957"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/Workout1_BTN_Reset"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Reset"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#191919"
            android:backgroundTint="#FF5757"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/Workout1_BNT_FinishWorkout"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Finish"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#191919"
            android:backgroundTint="#FFD700"
            android:layout_marginStart="8dp"/>
    </LinearLayout>


    <include
        android:id="@+id/bottom_bar"
        layout="@layout/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp" />
</RelativeLayout>
