<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />




    <application
        android:name="com.example.fitcheck.utilities.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/check"
        android:label="@string/app_name"
        android:roundIcon="@drawable/check"
        android:supportsRtl="false"
        android:theme="@style/Theme.FitCheck.AppCompat"
        tools:targetApi="31">
        <activity
            android:name=".UI.ProgressPhotoActivity"
            android:exported="false" />
        <activity
            android:name=".UI.WeeklyMetricsActivity"
            android:exported="false" />
        <activity
            android:name=".UI.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".UI.WeeklyCheckUpActivity"
            android:exported="false" />
        <activity
            android:name=".UI.Workout3Activity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.Workout2Activity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.Workout1Activity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.WorkoutMenuActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.DailyTrackerActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.SetUpGoals"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.MainMenu"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.LogInActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.openScreen"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>